<br>
<%= render "helpers/flash_errors", object: @person %>
<%= render "helpers/flash_errors", object: @collaborator %>
<div class="row">
  <%= form_for @person, url: { controller: "collaborators", action: action }, method: method do |f| %>
    <div class="form-group col-sm-12">
      <div class="form-group col-sm-6">
        <%= f.label "Nombre", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.text_field :first_name, class: "form-control validate[required]" %>
        </div>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label "Apellido", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.text_field :last_name, class: "form-control validate[required]" %>
        </div>
      </div>
    </div>
    <div class="form-group col-sm-12">
      <div class="form-group col-sm-6">
        <%= f.label "DNI", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.text_field :dni, class: "form-control validate[required]" %>
        </div>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label "Cumpleaños", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.text_field :birthday, class: "form-control validate[required]", data: {provide: "datepicker"} %>
        </div>
      </div>
    </div>
    <div class="form-group col-sm-12">
      <div class="form-group col-sm-6">
        <%= f.label "Telefono", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.text_field :phone, class: "form-control validate[required]" %>
        </div>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label "Celular", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.text_field :mobile, class: "form-control validate[required]" %>
        </div>
      </div>
    </div>
    <div class="form-group col-sm-12">
      <div class="form-group col-sm-6">
        <%= f.label "Sexo", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.select :gender, class_enum_for_select("Person","gender"), {prompt: '- Selecciona un genero -'}, class: "form-control validate[required]" %>
        </div>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label "Estado Civil", class: "col-sm-4 text-left" %>
        <div class="col-sm-6">
          <%= f.select :civil_status, class_enum_for_select("Person","civil_status"), {prompt: '- Selecciona un estado civil -'}, class: "form-control validate[required]" %>
        </div>
      </div>
    </div>
    <%= f.fields_for :collaborator do |c| %>
      <div class="form-group col-sm-12">
        <div class="form-group col-sm-6">
          <%= c.label "Email", class: "col-sm-4 text-left" %>
          <div class="col-sm-6">
            <%= c.text_field :email, class: "form-control validate[required]" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <%= c.label "Contraseña", class: "col-sm-4 text-left" %>
          <div class="col-sm-6">
            <%= c.text_field :civil_status, class: "form-control validate[required]" %>
          </div>
        </div>
      </div>
      <div class="form-group col-sm-12">
        <div class="form-group col-sm-6">
          <%= c.label "Rol", class: "col-sm-4 text-left" %>
          <div class="col-sm-6">
            <%= c.select :role, class_enum_for_select("Collaborator","role"), {prompt: '- Selecciona un rol -'}, class: "form-control validate[required]" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <%= c.label "Tipo", class: "col-sm-4 text-left" %>
          <div class="col-sm-6">
            <%= c.select :type, class_enum_for_select("Collaborator","type"), {prompt: '- Selecciona un tipo -'}, class: "form-control validate[required]" %>
          </div>
        </div>
      </div>
      <div class="form-group col-sm-12">
        <div class="form-group col-sm-6">
          <%= c.label "Estado", class: "col-sm-4 text-left" %>
          <div class="col-sm-6">
            <%= c.select :status, class_enum_for_select("Collaborator","status"), {prompt: '- Selecciona un estado -'}, class: "form-control validate[required]" %>
          </div>
        </div>
        <div class="form-group col-sm-6">
          <%= c.label "Sueldo", class: "col-sm-4 text-left" %>
          <div class="col-sm-6">
            <%= c.text_field :salary, class: "form-control validate[required]" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="form-group col-sm-11">
      <div class="form-group col-sm-6">
      </div>
      <div class="form-group col-sm-6 text-right">
        <% unless params[:action] == "show" %>
          <%= f.submit "Guardar" , class: "btn btn-primary" %>
        <% end %>
        <%= link_to 'Cancelar', collaborators_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>