<div class="row">
  <div class="col-sm-12">
    <h1 class="page-header">Clientes<%= link_to 'Nuevo Cliente', new_client_path, class: "btn btn-primary pull-right"  %></h1>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="panel-body">
      <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Codigo</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Email</th>
              <th>Tipo</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each_with_index do |c, index| %>
              <tr class="<%= index.even?? "even": "odd"%> gradeX">
                <td><%=c.id %></td>
                <td><%=c.first_name %></td>
                <td><%=c.last_name %></td>
                <td><%=c.email %></td>
                <td><%=c.type %></td>
                <td>
                  <%= link_to '<span class="fa fa-list"></span>'.html_safe, client_path(c), class: "btn btn-primary btn-circle", data: { "toggle" => "tooltip" }, title: "Mostrar" %>
                  <%= link_to '<span class="fa fa-pencil"></span>'.html_safe, edit_client_path(c), class: "btn btn-warning btn-circle", data: { "toggle" => "tooltip" }, title: "Editar" %>
                  <%= link_to '<span class="fa fa-close"></span>'.html_safe, client_path(c), method: :delete ,data: { toggle: "tooltip", confirm: "¿Está seguro?" }, title: "Borrar", class: "btn btn-danger btn-circle" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>